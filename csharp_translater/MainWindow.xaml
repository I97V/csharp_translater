        <TextBox x:Name="tb_sourceText" HorizontalAlignment="Left" Height="375" Margin="23,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="281"/>
        <Button Content="Translate" HorizontalAlignment="Left" Margin="309,19,0,0" VerticalAlignment="Top" Width="75" Click="Translate_Click"/>
        <TextBox x:Name="tb_resultText" HorizontalAlignment="Left" Height="375" Margin="389,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="281"/>
